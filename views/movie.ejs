                                    <div class="embla__viewport">
                                        <div class="embla__container">
                                            <% similar.forEach(mov=>{%>
                                                <div class="embla__slide" >
                                                    <div class="slider-inner-card embla__slide__inner viewed-card">
                                                        <a  href="/movie/<%= mov.id %>" title="<%=mov.title%>">
                                                            <img class="slider-image" src="https://image.tmdb.org/t/p/w500/<%= mov.poster_path %>" alt="" />
                                                        </a>
                                                        <div class="image-drop">
                                                            <%if(mov.title){%>
                                                                <h3><%=mov.title%></h3>
                                                                <%}else {%>
                                                                    <h3>n/a</h3>
                                                                <%}%> 
                                                        </div>
                                                    </div>
