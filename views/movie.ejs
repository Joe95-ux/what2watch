            </div>
        </form>
        <div class="multi-search-cancel"><i class="fas fa-times"></i></div>
        
    </div>
</div>
<section id="single-movie-container" style="background: linear-gradient(to bottom, rgba(0, 0, 0, 0) 35%, rgba(0, 0, 0, 0.6) 52%, #001019 80%), url(https://image.tmdb.org/t/p/w1280/<%=movie.backdrop_path%>);
                        background-size: cover; background-repeat: no-repeat; background-position: center center ;">
                        <% if(movie){%>
                            <div class="single-movie-wrapper">
                                <div class="wrapper-enclosure">
                                    <button class="back back-movie"><i class="fas fa-arrow-left go-back go-back-nav"></i></button>
                        
                                    <div class="single-movie-inner hero-height">
                                       <div class="hero-main">
                                        <h1 class="hero-title"><%= movie.title %></h1>
                                        <% if(movie.tagline){%>
                                            <p class="hero-tagline">"<%= movie.tagline%>"</p>
                                        <% }%>
                                        <div class="hero-dates">
                                            <% if(extData?.mpa_rating !== null && extData?.mpa_rating !== ""){%>
                                                <span class="content-rating"><%= extData?.mpa_rating%> </span>
                                            <% } %>  
                                            <span><%= movie.release_date?movie.release_date:"n/a" %></span>
                                            <%for(let genre of movie.genres.slice(0, 1)){%>
                                                <span>
                                                    <a href="/movie/genres/<%= genre.name %>"><%= genre.name %></a></span>
                                                <% } %>
                                            <span><span><%= runTime %></span></span>
                                        </div>
                                        <div class="hero-overview">
                                            <p class="clamp-synopsis">
                                                <%= movie.overview%>
                                                
                                            </p>
                                            <span class="hero-read hero-collapse open-synopsis synopsis-read-more">More<i class="fas fa-chevron-down"></i></span>
                                        </div>
                                        <div class="hero-trailer">
                                            <% if(movie.videos.results.length > 0){%>
                                                <div class="hero-btn-wrapper trailer" data-source="https://www.youtube.com/embed/<%= trailer?.key %>">
                                                    <button class="hero-btn"><i class="fas fa-play"></i></button><span class="hero-trailer-span">Trailer</span>
                                                </div>
                                                <%if(watch){%>
                                                    <div class="hero-watch-banner hero-collapse">
                                                        <img class="hero-img provider-img" src="https://image.tmdb.org/t/p/w500/<%= provider.logo_path%> " alt="<%= provider.provider_name %>">
                                                        <div><h4>Watch on <%= provider.provider_name %></h4></div>
                                                        
                                                    </div>
                                                <% } %>
                    
                                            <% }else{%>
                                                <%if(watch){%>
                                                    <div class="hero-watch-banner hero-collapse" style="margin-left: 0;">
                                                        <img class="hero-img provider-img" src="https://image.tmdb.org/t/p/w500/<%= provider.logo_path%> " alt="<%= provider.provider_name %>">
                                                        <div><h4>Watch on <%= provider.provider_name %></h4></div>
                                                        
                                                    </div>
                                                <% } %>
                                            <% } %>  
                                            
                                            
                                        </div>
                                        
                                       </div> 
                                    </div>
                        
                        
                        
                        
                        
                                    
                                </div>
                            
                           </div>
                        <% } %> 
                        </section>
                                <div class="movie-trailer">
                                    <div class="trailer-container">
                                        <% if(trailer){%>
                                        <div class="trailer-video">
                                            <iframe class="video_player" width="100%" height="100%"
                                                src=""
                                                title="YouTube video player" frameborder="0"
                                                allow="accelerometer; autoplay; clipboard-write; encrypted-media; gyroscope; picture-in-picture"
                                                allowfullscreen></iframe>
                                        </div>
                                        <img class="close-trailer" src="/multiply.png" alt="close">
                                        <% } %>
                                    </div>
                                </div>                               




                                <section id="more-movie-info">
                                    <div class="wrapper-enclosure">
                                        <div class="movie-synopsis movie-storyline">
                                            <div class="measuring-wrapper" style="padding-bottom:0.2rem;">
                                                <div class="measuring-content">
                                                    <div class="single-movie-card">
                                                        <% if(movie.poster_path){%>
                                                        <img src="https://image.tmdb.org/t/p/w500/<%= movie.poster_path %>" alt="<%= movie.title %>">
                                                        <%}else if(movie.poster_path === null){%>
                                                        <img src="/noposter.svg" alt="movie-poster">
                                                        <% } %>
                                                        <%if(watch){%>
                                                            <div class="watch-banner">
                                                                <img class="provider-img" src="https://image.tmdb.org/t/p/w500/<%= provider.logo_path%> " alt="<%= provider.provider_name %>">
                                                                <div>
                                                                <h4>Watch on <%= provider.provider_name %></h4></div>
                                                        
                                                            </div> 
                                                        
                                                        <% } %>
                                                    </div>
                                                    <div class="movie-complete-info">
                                                        <h2>Storyline</h2>
                                                        <p class="large-display-synopsis ">
                                                            <%= movie.overview %>
                                                        </p>
                                                        <% if(movie){%>
                                                            <div class="details-list-wrapper">
                                                                <ul class="details-list">
                                                                    <li>
                                                                        <div class="item-key">Released</div>
                                                                        <div class="item-value"><%= movie.release_date %> </div>
                                                                    </li>
                                                                    <li>
                                                                        <div class="item-key">Revenue</div>
                                                                        <div class="item-value"><%= movie.revenue > 0 ? "$" + revenue : "n/a" %></div>
                                                                    </li>
                                                                    <li>
                                                                        <div class="item-key">Budget</div>
                                                                        <div class="item-value"><%= movie.budget > 0 ? "$" + budget : "n/a" %></div>
                                                                    </li>
                                                                    <li>
                                                                        <div class="item-key">Runtime</div>
                                                                        <div class="item-value"><%= runTime %></div>
                                                                    </li>
                                                                    <li>
                                                                        <div class="item-key">Genre</div>
                                                                        <div class="item-value">
                                                                            <%= movieGenres %>
                                                                        </div>
                                                                    </li>
        
                                                                    <li>
                                                                        <div class="item-key">Status</div>
                                                                        <div class="item-value"><%= movie.status %> </div>
                                                                    </li>
                                                                    <li>
                                                                        <div class="item-key">Language</div>
                                                                        <div class="item-value"><%= spokenLanguages%></div>
                                                                    </li>
                                                                    <li>
                                                                        <div class="item-key"><img src="/logo-imdb.svg" alt="imdb-logo"></div>
                                                                        <div class="item-value"><%= extData?.rating%> <i class="fas fa-star"></i></div>
                                                                    </li>
                                                                    <li>
                                                                        <div class="item-key">Production</div>
                                                                        <div class="item-value"><%= network%></div>
                                                                    </li>
                                                                </ul>
                                                                <%if(crews){%>
                                                                    <div class="crews-bottom-wrapper">
                                                                        <h4>Crew</h4>
                                                                        <div class="crews crews-bottom">
                                                                            <% for(let person of crews){%>
                                                                            <div class="director">
                                                                                <a class="crew-name" href="#"><%= person.name %></a>
                                                                                <h5><%= person.job %> </h5>
                                                                            </div>
                                                        
                                                                            <% } %>
                                                        
                                                                        </div>
                                                        
                                                                    </div>
                                                        
                                                                <%} %>
                                                                <div class="movie-links">
                                                                    <% if(movie.homepage !== "" && movie.homepage !== null){%>
                                                                    <a href="<%= movie.homepage %> " target="_blank" class="web"
                                                                        role="button"><i class="fas fa-link"></i></a>
                                                                    <% } %>
                                                                    <a href="https://www.imdb.com/title/<%= movie.imdb_id %>/"
                                                                        target="_blank" role="button"><i
                                                                            class="fab fa-imdb"></i></a>
                                                                </div>
                                                                <div class="movie-keywords">
                                                                    <div class="keyword-title">Keywords:</div>
                                                                    <% if(keywords.length){%> 
                                                                        <div class="keywords-wrapper">
                                                                            <% keywords.forEach(keyword=>{%>
                                                                                <a href="/keyword/<%=keyword.id%>-<%=keyword.slug%>" class="keyword-proper">
                                                                                    <%= keyword.name %> 
                                                                                </a>
                                                                            <%}) %> 
                                                                        </div>
                                                                        <% }else{%>
                                                                            <div class="keywords-wrapper">
                                                                                <p>No keywords have been added yet</p>
                                                                            </div>
                                                                            
                                                                        <% } %>  
                                                                </div>
                                                                
                                                                
                                                            </div>
                                                            
                            
                            
                                                        <% } %> 
                                                        
                            
                                                    </div>
                                                </div>
                                                

                                                <div class="watch-providers-sm bottom-border">
                                                    <h3 class="watch-notice">Stream and watch <span><%= movie.title %></span></h3>
                                                    <div class="justwatch-wrapper">
                                                        <div data-jw-widget
                                                            data-api-key="kdXlICVx4d6qwyZYSThFxvVKAhQtwtqY"
                                                            data-object-type="movie"                 
                                                            data-id="<%= movie.imdb_id %>"
