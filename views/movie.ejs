                                        <% for(let language of movie.spoken_languages.slice(0, 3)){%>
                                            <span class="language"><%= language.name %><i class="fas fa-dot-circle"></i></span>
            
                                        <% } %>
                                        <% } %> 
                                        <p class="run-time"><%= runTime %></p>
                                        <p class="release-date">
                                            <span>|</span>
                                            <%= movie.release_date?movie.release_date:"n/a" %>
                                        </p>
                                    </div>
            
                                </div>
                                <div class="genres-and-director top-genres" >
                                    <div class="genres">
                                        <%for(let genre of movie.genres.slice(0, 3)){%>
                                        <span class="genre1"><i class="fas fa-dot-circle"></i><a href="/movie/genres/<%= genre.name %>"><%= genre.name %></a></span>
                                        <% } %>
                                        <p class="movie-rating"><i class="fas fa-star"></i><span><%= movie.vote_average %></span></p>
                                    </div> 
                                </div>
                                
                                <div class="synopsis">
                                    <% if(movie.tagline){%>
                                        <p class="tagline">"<%= movie.tagline%>"</p>
                                    <% }%> 
                                    <% if(movie.overview.length > 100){%> 
                                        <p class="clamp-synopsis">
                                            <%= movie.overview%> 
                                        </p>
                                        <h5 class="open-synopsis synopsis-read-more" >...Read more</h5>
                                    <% }else{%>
                                        <p class="no-clamp"><%= movie.overview%></p>
                                    <% } %>  
                                    <%if(crews){%>
                                        <div class="crews crews-top">
                                            <% for(let person of crews){%>
                                                <div class="director" >
                                                    <a class="crew-name" href="#"><%= person.name %></a>
                                                    <h5 ><%= person.job %> </h5>
                                                </div>
                                            
                                            <% } %> 
    
                                        </div>
                                    <%} %> 
                                </div>
                                <% if(watch){%> 
                                    <div class="watch-providers">
                                        <div class="watch-title">
                                            <h2>Where to Watch</h2>
                                            <div class="just-watch">
                                                <p>Powered by</p>
                                                <img src="/justwatch-logo.png" alt="just-watch">
                                            </div>
                                        </div>
